{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "Simple NodeJS API with Clean Architecture concepts.",
  "main": "index.js",
  "author": "Flaviano Xavier <flaviano.pxjunior@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "mongoose": "^5.11.7"
  },
  "devDependencies": {
    "eslint": "^7.15.0",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "2.2.1"
  },
  "scripts": {
    "test": "jest --silent --verbose --colors",
    "test:watch": "jest --watch --silent --verbose --colors",
    "test:ci": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test:ci"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix",
      "test",
      "git add"
    ],
    "*.{js,css,md}": "prettier --write"
  }
}
